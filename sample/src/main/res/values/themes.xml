<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="android:colorBackground">@color/lighter_grey</item>
        <item name="colorPrimary">@color/lighter_green</item>
        <item name="colorPrimaryVariant">@color/mid_green</item>
        <item name="colorPrimaryDark">@color/mid_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        <item name="colorAccent">@color/darker_green</item>
        <item name="colorSurface">@color/lighter_grey</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceContainerLow">@color/lighter_grey</item>
        <item name="colorSurfaceContainerHighest">@color/light_grey</item>
        <item name="colorControlNormal">@color/darker_green</item>
        <item name="android:statusBarColor">@color/lighter_grey</item>
        <item name="colorPrimaryContainer">@color/lighter_grey</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondaryContainer">@color/light_green</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
